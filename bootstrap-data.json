{
  "platforms" : {
    "linux" : {
      "pakages": ["ninja", "valgrind", "pip3", "gem"]

    },
    "darwin" : {
      "pakages": ["ninja", "valgrind", "pip3", "gem"]
    },
    "win32" : {
      "pakages": []
    }
  },
	"linux_distros": {
		"fedora": {
			"default_pgk_mgr": "dnf",
			"pakages": ["libasan", "libtsan", "ruby-developer"]
		},
		"ubuntu": {
			"default_pgk_mgr": "apt-get",
			"pakages": ["ruby-developer"]
		}
	},


	"pkg_mgrs": {
		"dnf": {
      "suitable_for" : ["linux"],
			"update_cmd": ["sudo", "dnf", "update"],
			"install_cmd": ["sudo", "dnf", "-y", "install", "{pkg_name}"]
		},
		"apt-get": {
      "suitable_for" : ["linux"],
			"update_cmd": ["sudo", "apt-get", "update"],
			"install_cmd": ["sudo", "apt-get", "-y", "install", "{pkg_name}"]
		},
		"brew": {
      "suitable_for" : ["darwin"],
			"update_cmd": ["brew", "update"],
			"install_cmd": ["brew", "install", "{pkg_name}"]
		},
    "port": {
      "suitable_for" : ["darwin"],
			"install_cmd": [ "sudo", "port", "install", "{pkg_name}" ]
		}
	},


	"pkgs": {

		"libasan": {
			"pkg_name": {
				"dnf": "libasan"
			}
		},
		"libtsan": {
			"pkg_name": {
				"dnf": "libtsan"
			}
		},
		"ruby-developer": {
			"pkg_name": {
				"dnf": "ruby-devel",
				"apt-get": "ruby-dev"
			}
		},
		"valgrind": {
			"required_version": "1.1.1",
      "pkg_name": {
        "dnf": "valgrind",
        "apt-get": "valgrind",
        "brew": "valgrind"
      }
		},
		"ninja": {
			"required_version": "1.1.1",
			"pkg_name": {
        "dnf": "ninja",
        "apt-get": "ninja-build",
        "brew": "ninja"
      }
		},
		"pip3": {
			"pkg_name": {
				"dnf": "python3-pip",
				"apt-get": "python3-pip",
				"brew": "python3-pip"
			}
		},
		"gem": {
			"pkg_name": {
			  "dnf": "gem",
			  "apt-get": "gem",
			  "brew": "gem"
      }
		}
	},

	"pip3-pkg-manager": {
		"install_cmd": ["sudo", "-H", "pip3", "install", "{pkg_name}"],
		"intall_version_cmd": ["sudo", "-H", "pip3", "install", "{pkg_name}=={pkg_vers}", "--force-reinstall"]
	},

	"pip3-packages": {
		"meson": {}
	},

	"gem-pkg-manager": {
		"install_cmd": ["sudo", "gem", "install", "{pkg_name}"]
	},

  "gem-packages": {
    "": {}
  },

	"builds": {
		"debug": {
			"type": "debug"
		},
		"release": {
			"type": "release"
		},
		"plain": {
			"type": "plain"
		},
		"debug-opt": {
			"type": "debugoptimized",
			"grind": true
		},
		"asan": {
			"type": "debugoptimized",
			"opts": ["-Db_sanitize=address"],
			"env": {
				"VALGRIND": "1"
			}
		},
		"tsan": {
			"type": "debugoptimized",
			"opts": ["-Db_sanitize=thread"],
			"env": {
				"VALGRIND": "1"
			}
		}
	}
}
